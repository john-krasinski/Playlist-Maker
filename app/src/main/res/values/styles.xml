<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/AppFontFamily</item>
    </style>

    <style name="Theme.PlaylistMakerSecondary" parent="Theme.PlaylistMaker">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/AppFontFamily</item>
    </style>

    <style name="AppFontFamily">
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/mainButtonMargin</item>
        <item name="android:layout_marginLeft">@dimen/mainButtonMargin</item>
        <item name="android:layout_marginRight">@dimen/mainButtonMargin</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainButtonIconPadding</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">@dimen/mainButtonCornerRadius</item>
    </style>

    <style name="MainHeaderText" parent="AppFontFamily">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:padding">@dimen/headerTextPadding</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="HeaderText" parent="AppFontFamily">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:padding">@dimen/headerTextPadding</item>
        <item name="android:paddingStart">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/headerHeight</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="SettingsItemText" parent="AppFontFamily">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/settingsPaddingHorizontal</item>
        <item name="android:paddingVertical">@dimen/settingsPaddingVertical</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
    </style>

    <style name="SettingsItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:padding">@dimen/settingsIconPadding</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/search2</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColorHint">@color/grey3</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>