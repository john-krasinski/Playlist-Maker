<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorTertiary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textAppearance">@style/AppFontFamily</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.PlaylistMakerSecondary" parent="Theme.PlaylistMaker">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="HeaderText" parent="AppFontFamily">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:padding">@dimen/headerTextPadding</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SettingsItemText" parent="AppFontFamily">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingHorizontal">@dimen/settingsPaddingHorizontal</item>
        <item name="android:paddingVertical">@dimen/settingsPaddingVertical</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
    </style>
</resources>