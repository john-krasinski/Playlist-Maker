<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker">s
        <item name="android:textAppearance">@style/AppFontFamily</item>
    </style>

    <style name="Theme.PlaylistMakerSecondary" parent="Theme.PlaylistMaker">
        <item name="android:textAppearance">@style/AppFontFamily</item>
    </style>

    <style name="HeaderText" parent="AppFontFamily">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:padding">@dimen/headerTextPadding</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/headerHeight</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/mainButtonMargin</item>
        <item name="android:layout_marginLeft">@dimen/mainButtonMargin</item>
        <item name="android:layout_marginRight">@dimen/mainButtonMargin</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainButtonIconPadding</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="cornerRadius">@dimen/mainButtonCornerRadius</item>
    </style>

    <style name="SettingsItemText" parent="AppFontFamily">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:paddingStart">@dimen/settingsPaddingHorizontal</item>
        <item name="android:paddingVertical">@dimen/settingsPaddingVertical</item>
        <item name="android:paddingEnd">@dimen/settingsIconPadding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/search2</item>
        <item name="android:background">@drawable/rounded_card</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColorHint">@color/grey4</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FoundTrackName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/foundTrackNameTextSize</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FoundTrackDetails">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/foundTrackDetailsTextSize</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="FoundTrackCoverImg">
        <item name="android:background">@color/black</item>
    </style>

    <style name="foundTrackCoverContainer">
        <item name="android:layout_width">@dimen/foundTrackCoverSize</item>
        <item name="android:layout_height">@dimen/foundTrackCoverSize</item>
        <item name="android:outlineSpotShadowColor">@color/black</item>
    </style>

    <style name="ErrorPageText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/errorPageTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingVertical">@dimen/errorPageTextPaddingV</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ErrorPageButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
    </style>
</resources>