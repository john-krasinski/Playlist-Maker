<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/errorPageImg"
            style="@style/ErrorPageImg"
            tools:src="@drawable/track_not_found"/>
        <TextView
            android:id="@+id/errorPageMsg"
            style="@style/ErrorPageText"
            android:text="@string/errorTracksNotFound"/>
        <Button
            android:id="@+id/errorPageBtn"
            style="@style/ErrorPageButton"
            android:visibility="gone"
            tools:text="Обновить"
            tools:visibility="visible"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>